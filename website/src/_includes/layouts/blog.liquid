---
layout: layouts/page.liquid
social-image: social-logo.png
---

<section class="blog">
	<div class="post">
		<h1 id="{{ title | kebabCase }} ">{{ title }}</a></h1>
		{% include blog-post-info.liquid %}

		{{ content | safe }}

		<div class="tags">
		tags:
			{% for tag in tags %}
				{% if collections.tagList contains tag %}
					{% capture tagUrl %}/blog/tags/{{ tag }}/{% endcapture %}
					<a href="{{ tagUrl }}" class="tag">{{ tag }}</a>
				{% endif %}
			{% endfor %}
		</div>
	</div>
</section>
